# MCP Everything Environment Configuration
# Copy this file to .env and fill in the required values

# =============================================================================
# REQUIRED - Get these from respective services
# =============================================================================

# Anthropic API Key - Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxx

# GitHub Personal Access Token - Get from https://github.com/settings/tokens
# Required scopes: repo, read:user
GITHUB_TOKEN=ghp_xxxxx

# =============================================================================
# OPTIONAL - For enhanced functionality
# =============================================================================

# Tavily API Key - For web search capabilities
# Get from https://tavily.com/
TAVILY_API_KEY=tvly-xxxxx

# =============================================================================
# DATABASE - Defaults work for local Docker development
# =============================================================================

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=mcp
POSTGRES_PASSWORD=mcp_secret
POSTGRES_DB=mcp_everything
DATABASE_URL=postgresql://mcp:mcp_secret@localhost:5432/mcp_everything

# =============================================================================
# REDIS - Defaults work for local Docker development
# =============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# =============================================================================
# APPLICATION
# =============================================================================

NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:4200

# JWT Secret for authentication (change in production!)
JWT_SECRET=dev-secret-key-change-in-production

# =============================================================================
# DOCKER
# =============================================================================

DOCKER_HOST=unix:///var/run/docker.sock

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

BUILD_TIMEOUT=300000
MAX_CONCURRENT_BUILDS=3

# =============================================================================
# DEPLOYMENT
# =============================================================================

DEFAULT_GIST_VISIBILITY=public
MAX_GIST_SIZE=10485760

# =============================================================================
# STRIPE - Optional until Phase 4 (Subscriptions)
# See docs/STRIPE_SETUP.md for instructions
# =============================================================================

STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Stripe Price IDs (from Stripe Dashboard)
STRIPE_PRICE_FREE=price_xxxxx
STRIPE_PRICE_PRO=price_xxxxx
STRIPE_PRICE_PRO_YEARLY=price_xxxxx
STRIPE_PRICE_ENTERPRISE=price_xxxxx
# MCP Everything Environment Configuration

# API Keys (REQUIRED)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GITHUB_TOKEN=your_github_personal_access_token_here

# JWT Configuration
# Must be at least 32 characters for security
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mcp_everything

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:4200

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# Build Configuration
BUILD_TIMEOUT=300000
MAX_CONCURRENT_BUILDS=3

# Deployment Configuration
DEFAULT_GIST_VISIBILITY=public
MAX_GIST_SIZE=10485760

# Stripe Configuration (Subscriptions & Payments)
# See docs/STRIPE_SETUP.md for instructions on obtaining these values
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Stripe Price IDs (from Stripe Dashboard)
# Create these products/prices in Stripe Dashboard first
STRIPE_PRICE_FREE=price_xxxxx
STRIPE_PRICE_PRO=price_xxxxx
STRIPE_PRICE_PRO_YEARLY=price_xxxxx
STRIPE_PRICE_ENTERPRISE=price_xxxxx